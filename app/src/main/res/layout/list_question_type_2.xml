<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_list_height_96"
    android:minHeight="@dimen/dimen_list_height_96"
    android:background="@drawable/layer_background"
    android:padding="@dimen/dimen_2"
    android:layout_margin="@dimen/dimen_4">
    <TextView
        android:id="@+id/main_question_type2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_4"
        android:textSize="@dimen/text_size_18"
        android:layout_gravity="center"
        android:maxLines="2"
        tools:text="Main Question... What is this?"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_32"
        android:layout_marginRight="@dimen/dimen_32"
        android:background="@color/colorTranspaBlack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_4"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radio_group_answerlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_2"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Answer 1"/>
        <RadioButton
            android:id="@+id/radio_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Answer 2"/>
        <RadioButton
            android:id="@+id/radio_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Answer 3"/>
        <RadioButton
            android:id="@+id/radio_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Answer 4"/>
        </RadioGroup>
    </LinearLayout>


</LinearLayout>