<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <!-- Apply border around -->
            <stroke
                android:color="@android:color/transparent"
                android:width="0dp" />
            <!-- Apply padding to make image 4dp smaller -->
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>